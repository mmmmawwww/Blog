@model Project_1._1.Models.Category

@{
    ViewBag.Title = "Удалить категорию";
}

<h2>Удалить категорию</h2>
<ul class="nav nav-pills" id="navadminpanel">
    <li>@Html.ActionLink("Вернуться назад", "Category")</li>
</ul>
<div class="panel-group form-horizontal  jumbotron panelAdd">
    <div>
        <dl class="dl-horizontal col-md-offset-3 col-md-3">
            <dt >
                @Html.DisplayName("Название категории")
            </dt>

            <dd  >
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Удалить" class="btn btn-default" />
            </div>
        </div>
    }
</div>