@model Project_1._1.Models.Category

@{
    ViewBag.Title = "Добавить категорию";
}

<h2>Добавить новую категорию</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <ul class="nav nav-pills" id="navadminpanel">
        <li><a href="Category">Вернуться назад</a></li>
    </ul>
    <div class="panel-group form-horizontal  jumbotron panelAdd">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-5">Название категории: </label>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="Добавить категорию" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
